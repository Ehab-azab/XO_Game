<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/refreshbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:src="@drawable/ic_refresh"
        app:layout_constraintBottom_toTopOf="@id/player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/refreshbtn"
        app:layout_constraintHeight_percent=".2"

        tools:text="player1 : 14"
        android:textSize="40sp"
        android:gravity="center"

        />
    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        app:layout_constraintHeight_percent=".2"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/et_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="xoclick"
            android:textSize="40sp"
            android:background="@drawable/xoshape"
            tools:text="X" />

        <TextView
            android:id="@+id/et_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="xoclick"
            android:textSize="40sp"
            android:background="@drawable/xoshape"
            tools:text="X" />

        <TextView
            android:id="@+id/et_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="xoclick"
            android:textSize="40sp"
            android:background="@drawable/xoshape"
            tools:text="X" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/secound_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/first_row"
            app:layout_constraintHeight_percent=".2"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/et_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="xoclick"
                android:textSize="40sp"
                android:background="@drawable/xoshape"
                tools:text="O" />

            <TextView
                android:id="@+id/et_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="xoclick"
                android:textSize="40sp"
                android:background="@drawable/xoshape"
                tools:text="X" />

            <TextView
                android:id="@+id/et_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="xoclick"
                android:textSize="40sp"
                android:background="@drawable/xoshape"
                tools:text="O" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/secound_row"
        app:layout_constraintHeight_percent=".2"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="xoclick"
            android:textSize="40sp"
            android:background="@drawable/xoshape"
            tools:text="X" />

        <TextView
            android:id="@+id/et_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="xoclick"
            android:textSize="40sp"
            android:background="@drawable/xoshape"
            tools:text="X" />

        <TextView
            android:id="@+id/et_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="xoclick"
            android:textSize="40sp"
            android:background="@drawable/xoshape"
            tools:text="X" />

    </LinearLayout>

    <TextView
        android:id="@+id/player2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_row"
        app:layout_constraintHeight_percent=".2"
        android:textSize="40sp"
        android:gravity="center"
        tools:text="Player 2 : 76"

        />

</androidx.constraintlayout.widget.ConstraintLayout>